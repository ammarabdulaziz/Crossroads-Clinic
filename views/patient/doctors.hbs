<div class="container">

    <div id="tab6" class="tab-content" style="min-height: 50em;">
        <!--  Custom breadcrumb  -->

        <div class="content">
            <div>
                <ul class="bar mt-4 mb-4 d-flex align-items-center justify-content-between pt-2 pl-3 pb-2 pr-2">
                    <div class="d-flex align-items-center">
                        <li class="bar-item"><a href="/homepage">Homepage</a></li>
                        <span>/</span>
                        <li class="bar-item active">Doctors</li>
                    </div>
                    <div class="dropdown">
                        <button class="btn dropdown-toggle" type="button">
                            Departments
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item active" data-filter="all" href="#">All</a>
                            {{#each specialities}}
                            <a class="dropdown-item" data-filter="{{this.speciality}}" href="#">{{this.speciality}}</a>
                            {{/each}}
                        </div>
                    </div>
                </ul>
            </div>
        </div>
        {{#if error}}
        <div class="row mt-3 mb-4 pl-3 pr-3">
            <div class="col-12 error-box" id="errorDiv">
                <div class="error-msg">
                    <p class="m-0">{{error}}</p>
                </div>
                <i id="closeMsg" class="fa fa-times" aria-hidden="true"></i>
            </div>
        </div>
        {{/if}}
        <!-- - Doctor Cards  -->

        <div class="content">
            <div class="row doctors">
                {{#each doctors}}
                <div class="col-12 col-md-3 mb-3 doc-box {{this.speciality}}">
                    <img src="/images/{{this._id}}.jpg" alt="image" width="100%">
                    <div class="doc-card">
                        <h4>Dr. {{this.firstname}} {{this.lastname}}</h4>
                        <h2>{{this.speciality}}</h2>
                        <div><a href="/book-appointment?docId={{this._id}}" class="btn btn-green-outline">Book Now</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#closeMsg").click(function () {
            window.location.href = '/doctors'
            $("#errorDiv").hide();
        })
    })
</script>
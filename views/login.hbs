    <title>Document</title>
</head>

<body>
    

    <div class="login-card">
        <div class="login-content">
            {{!-- {{>messages}} --}}
            <h1>LOGIN</h1>
            <h4>Login to your account to continue</h4>
            <div class="login-register">
                <h5 class="login-tab active"><a href="">Login</a></h5>
                <h5 class="register-tab "><a href="">Register</a></h5>
            </div>
            <form action="/login" method="POST">
                <label for="email">Email Address</label><br>
                <div class="form-icon-input">
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                    <input type="text" id="email" name="email" placeholder="johndoe@gmail.com"><br>
                </div>
                <label for="password">Password</label><br>
                <div class="form-icon-input">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                    <input type="password" id="password" name="password" placeholder="*****">
                </div>
                <div class="submit">
                    <button class="btn btn-green" type="submit">Login</button>
                    <h5><a href="">Forgot password</a></h5>
                </div>
            </form>
            <br>
            <br>
        </div>
    </div>
</body>

</html>